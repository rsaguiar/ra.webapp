@model RA.App.ViewModel.PriceViewModel

@{ Layout = "~/Views/Shared/_Layout.cshtml";
                ViewBag.Title = "Deletar"; }

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2 class="page-title">@ViewBag.Title</h2>        
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInDown">
    <div class="panel panel-primary">
        <div class="panel-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <label asp-for="Id" class="control-label col-md-2"></label>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>               
                <div class="form-group">
                    <label asp-for="FromDDDCode" class="control-label col-md-2"></label>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.FromDDDCode, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ToDDDCode" class="control-label col-md-2"></label>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.ToDDDCode, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PricePerMinute" class="control-label col-md-2"></label>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.PricePerMinute, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer panel-info">
            <a asp-action="Index" class="btn btn-white">Cancel</a>
            <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#deleteConfirmationModal">
                Delete
            </a>
        </div>
    </div>
</div>

<div class="modal inmodal" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <i class="fa fa-ban modal-icon">
                    <h4 class="modal-title">Confirmar exclusão</h4>
                </i>
            </div>
            <div class="modal-body">
                <p style="text-align:center;">
                    Are you sure you want to delete this price?
                </p>
                @using (Html.BeginForm("Delete", "Price", FormMethod.Post, new { @id = "delete-form", role = "form" })) {
                    @Html.HiddenFor(m => m.Id)
                    @Html.AntiForgeryToken()}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">No</button>
                <button type="button" class="ladda-button btn btn-primary" onclick="$('#delete-form').submit();" data-style="zoom-in">Yes</button>
            </div>
        </div>
    </div>
</div>