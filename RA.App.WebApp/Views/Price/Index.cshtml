@model IEnumerable<RA.App.ViewModel.PriceViewModel>

@{ ViewBag.Title = "Preços";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2 class="page-title">@ViewBag.Title</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a asp-action="Create" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i>Preço</a>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInDown">
    <div class="panel panel-primary">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FromDDDCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ToDDDCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PricePerMinute)
                            </th>
                            <th class="text-right">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null) {
                            @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FromDDDCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ToDDDCode)
                                </td>                               
                                <td>
                                    $ @Html.DisplayFor(modelItem => item.PricePerMinute)
                                </td>
                                <td class="text-right">
                                    <div class="btn-group">
                                        <a class="btn-white btn btn-xs" href="/Price/Edit/@item.Id"><i class="glyphicon glyphicon-edit"></i> Edit</a>
                                        <a class="btn-white btn btn-xs" href="/Price/Delete/@item.Id"><i class="glyphicon glyphicon-remove"></i> Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles{
    <link rel="stylesheet" href="~/css/plugins/dataTables/datatables.min.css" />
}

@section StyleBefore{
    <link rel="stylesheet" href="~/css/plugins/toastr/toastr.min.css" />
}

@section ScriptPage{
    <script src="~/js/plugins/dataTables/datatables.min.js"></script>
    <script src="~/js/custom/setDataTables.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            setDataTable();
        });</script>
}